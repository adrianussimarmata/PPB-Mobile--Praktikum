<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PATCH.updatePatch.UpdatePatchActivity">

    <TextView
        android:id="@+id/title_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update PATCH"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/form_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/form_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/form_job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black" />

    <TextView
        android:id="@+id/title_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/response_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response Code :"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_response"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/value_response_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/response_field"
        app:layout_constraintStart_toEndOf="@+id/response_field" />

    <TextView
        android:id="@+id/name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name                   :"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/response_field"
        app:layout_constraintStart_toStartOf="@+id/response_field"
        app:layout_constraintEnd_toEndOf="@+id/response_field"/>

    <TextView
        android:id="@+id/value_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/name_field"
        app:layout_constraintStart_toEndOf="@+id/name_field" />

    <TextView
        android:id="@+id/job_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job                       :"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_field"
        app:layout_constraintStart_toStartOf="@+id/name_field"
        app:layout_constraintEnd_toEndOf="@+id/name_field"/>

    <TextView
        android:id="@+id/value_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/job_field"
        app:layout_constraintStart_toEndOf="@+id/job_field" />

    <TextView
        android:id="@+id/time_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated At          :"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/job_field"
        app:layout_constraintStart_toStartOf="@+id/job_field"
        app:layout_constraintEnd_toEndOf="@+id/job_field"/>

    <TextView
        android:id="@+id/value_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/time_field"
        app:layout_constraintStart_toEndOf="@+id/time_field" />

</androidx.constraintlayout.widget.ConstraintLayout>